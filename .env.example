# AI Bill 环境变量配置示例
# 复制此文件为 .env 并填入实际值
# 警告: .env 文件不应提交到版本控制系统

# ==================== 数据库配置 ====================
DB_URL=jdbc:mysql://localhost:3306/ai_bill?serverTimezone=Asia/Shanghai&useUnicode=true&characterEncoding=utf-8&zeroDateTimeBehavior=convertToNull&useSSL=false&allowPublicKeyRetrieval=true
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==================== JWT 配置 ====================
# 至少64个字符的随机字符串
JWT_SECRET=your-super-secret-jwt-key-at-least-64-characters-long-for-hs512
JWT_EXPIRATION_MS=604800000

# ==================== OpenAI/AI 配置 ====================
OPENAI_BASE_URL=https://api.openai.com
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# ==================== 微信小程序配置 ====================
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret

# ==================== 七牛云配置 ====================
QINIU_ACCESS_KEY=your_qiniu_access_key
QINIU_SECRET_KEY=your_qiniu_secret_key
QINIU_BUCKET=your_bucket_name
QINIU_DOMAIN=your_domain.com
QINIU_USE_HTTPS=true

# ==================== 汇率 API 配置 ====================
RATE_API_URL=https://v2.xxapi.cn/api/exchange

# ==================== 服务器配置 ====================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
