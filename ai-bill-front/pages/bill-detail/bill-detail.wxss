/* bill-detail.wxss */
page {
  width: 100%;
  overflow-x: hidden;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  width: 100vw;
  max-width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 100vh;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 100vh;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

.error-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.retry-btn {
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  background-color: #333;
  color: white;
  border-radius: 16rpx;
  text-align: left;
}

/* 账单详情容器 */
.bill-detail-container {
  margin-top: 20rpx;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 金额区域样式 */
.amount-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: left;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
  max-width: calc(100vw - 40rpx);
}

.amount-label {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.amount-value {
  font-size: 60rpx;
  font-weight: bold;
  margin: 10rpx 0;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
  max-width: 100%;
}

.expense {
  color: #333;
}

.income {
  color: #333;
}

.currency {
  font-size: 24rpx;
  color: #999;
}

/* 基本信息区域样式 */
.info-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
  max-width: calc(100vw - 40rpx);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
  text-align: left;
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  align-items: flex-start;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
  box-sizing: border-box;
  padding-right: 10rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
}

/* 图片区域样式 */
.image-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
  max-width: calc(100vw - 40rpx);
}

.image-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
  text-align: left;
}

/* 查看图片按钮样式 */
.view-image-btn {
  width: 100%;
  background-color: #f2f2f2;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex !important;
  flex-direction: column;
  align-items: flex-start !important;
  justify-content: flex-start !important;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx;
  border: none;
  box-sizing: border-box;
  max-width: 100%;
}

.view-image-btn::after {
  border: none;
}

.btn-icon {
  font-size: 46rpx;
  margin-bottom: 16rpx;
  color: #333;
}

.btn-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.image-info {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.image-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.image-size {
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
}

/* 按钮公共样式 - 强制文本居中 */
button {
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 20rpx;
  margin: 0 10rpx;
  transition: all 0.3s ease;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-sizing: border-box;
  min-width: 0;
  white-space: nowrap;
}

.edit-btn {
  background-color: #333;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

.delete-btn {
  background-color: #666;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 编辑模式样式 */
.edit-header {
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  width: 100%;
  max-width: calc(100vw - 40rpx);
}

.edit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: left;
}

.edit-form {
  background-color: white;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
  max-width: calc(100vw - 40rpx);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.form-item-textarea {
  align-items: flex-start;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  min-width: 0;
  overflow: hidden;
}

/* 统一编辑页面表单项的对齐方式 */
.input-field, .picker-value {
  font-size: 28rpx;
  color: #333;
  width: 100%;
  padding: 10rpx 0;
  text-align: left;
  box-sizing: border-box;
  min-width: 0;
}

.picker-value {
  position: relative;
  padding-right: 40rpx;
  text-align: left;
}

.picker-arrow {
  position: absolute;
  right: 0;
  font-size: 20rpx;
  color: #999;
  top: 50%;
  transform: translateY(-50%);
}

/* 缩短备注区域 */
.textarea-field {
  font-size: 28rpx;
  color: #333;
  width: 100%;
  min-height: 80rpx;
  max-height: 100rpx;
  padding: 10rpx 0;
  text-align: left;
}

/* 编辑模式底部按钮 */
.edit-action-section {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: white;
  border-radius: 0 0 20rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  width: 100%;
  max-width: calc(100vw - 40rpx);
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
}

.save-btn {
  background-color: #333;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 响应式适配 - 针对小屏幕设备 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }

  .amount-section {
    padding: 30rpx 25rpx;
    margin-bottom: 15rpx;
    border-radius: 15rpx;
  }

  .amount-value {
    font-size: 48rpx;
  }

  .amount-label {
    font-size: 26rpx;
  }

  .info-section, .image-section {
    padding: 25rpx;
    margin-bottom: 15rpx;
    border-radius: 15rpx;
  }

  .info-title, .image-title {
    font-size: 28rpx;
    margin-bottom: 15rpx;
  }

  .info-label {
    width: 120rpx;
    font-size: 24rpx;
  }

  .info-value {
    font-size: 24rpx;
  }

  .form-label {
    width: 120rpx;
    font-size: 24rpx;
  }

  .input-field, .picker-value, .textarea-field {
    font-size: 24rpx;
  }

  .action-btn {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    margin: 0 5rpx;
    min-width: 0;
  }

  .edit-action-section {
    padding: 25rpx;
  }
}

/* 针对iPhone5等超小屏幕设备的特殊适配 */
@media (max-width: 320px) {
  .container {
    padding: 10rpx;
  }

  .amount-section {
    padding: 25rpx 20rpx;
    margin-bottom: 12rpx;
  }

  .amount-value {
    font-size: 42rpx;
  }

  .amount-label {
    font-size: 24rpx;
  }

  .info-section, .image-section {
    padding: 20rpx 15rpx;
    margin-bottom: 12rpx;
  }

  .info-title, .image-title {
    font-size: 26rpx;
    margin-bottom: 12rpx;
  }

  .info-label {
    width: 80rpx;
    font-size: 22rpx;
    padding-right: 8rpx;
  }

  .info-value {
    font-size: 22rpx;
  }

  .form-label {
    width: 80rpx;
    font-size: 22rpx;
    padding-right: 8rpx;
  }

  .input-field, .picker-value, .textarea-field {
    font-size: 22rpx;
  }

  .action-btn {
    height: 75rpx;
    line-height: 75rpx;
    font-size: 24rpx;
    margin: 0 3rpx;
    min-width: 0;
  }

  .edit-action-section {
    padding: 20rpx 15rpx;
  }

  .edit-form {
    padding: 0 20rpx;
  }

  .edit-header {
    padding: 25rpx 20rpx;
  }

  .edit-title {
    font-size: 28rpx;
  }
}