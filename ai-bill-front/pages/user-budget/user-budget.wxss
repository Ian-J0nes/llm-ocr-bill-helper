/* pages/user-buget/user-buget.wxss */
.budget-container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #888;
  display: block;
}

/* 添加新预算按钮样式 */
.add-btn-section {
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
}

.add-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #2196f3;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-btn:active {
  opacity: 0.8;
}

/* 无预算提示样式 */
.no-budget-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 100rpx 0;
  padding: 40rpx;
  text-align: center;
}

.tip-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.tip-subtext {
  font-size: 26rpx;
  color: #999;
}

.form-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.picker-wrapper, .input-wrapper {
  position: relative;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

/* 预警阈值滑块样式 */
.slider-wrapper {
  padding: 10rpx 0;
}

.hint-text {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

/* 修复picker组件在某些机型上的显示问题 */
picker {
  width: 100%;
  height: 100%;
}

.picker-text {
  display: flex;
  align-items: center;
  height: 100%;
  flex: 1;
}

.arrow {
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  height: 100%;
}

.budget-input {
  height: 100%;
  width: 80%;
}

.unit {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.btn-section {
  margin: 40rpx 0;
  display: flex;
  justify-content: space-between;
}

.save-btn {
  background-color: #4caf50;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 48%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border-radius: 8rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 48%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.save-btn:active, .cancel-btn:active {
  opacity: 0.8;
}

.budget-list-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.budget-list .budget-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.budget-list .budget-item:last-child {
  border-bottom: none;
}

.budget-info {
  display: flex;
  flex-direction: column;
}

.budget-type {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.budget-amount {
  font-size: 32rpx;
  color: #4caf50;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.budget-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.budget-alert {
  font-size: 22rpx;
  color: #ff9800;
}

.budget-actions {
  display: flex;
}

.edit-btn, .delete-btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.edit-btn {
  color: #2196f3;
  border: 1rpx solid #2196f3;
}

.delete-btn {
  color: #f44336;
  border: 1rpx solid #f44336;
}