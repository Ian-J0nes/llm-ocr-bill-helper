<!--pages/user-info/user-info.wxml-->
<view class="container">
  <view class="user-info-form">
    <!-- 头像 (只读) -->
    <view class="form-item avatar-item">
      <text class="item-label">头像</text>
      <view class="item-content avatar-content">
        <image class="avatar-image" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      </view>
    </view>

    <!-- 昵称 (只读) -->
    <view class="form-item">
      <text class="item-label">昵称</text>
      <view class="item-content">
        <text class="item-value">{{userInfo.nickname || '未设置'}}</text>
      </view>
    </view>

    <!-- 用户名 -->
    <view class="form-item">
      <text class="item-label">用户名</text>
      <view class="item-content">
        <input class="item-input" type="text" placeholder="请输入用户名" value="{{userInfo.username}}" data-field="username" bindinput="onInputValueChange" />
      </view>
    </view>

    <!-- 邮箱 -->
    <view class="form-item">
      <text class="item-label">邮箱</text>
      <view class="item-content">
        <input class="item-input" type="text" placeholder="请输入邮箱" value="{{userInfo.email}}" data-field="email" bindinput="onInputValueChange" />
      </view>
    </view>

    <!-- 手机号
    <view class="form-item">
      <text class="item-label">手机号</text>
      <view class="item-content">
        <input class="item-input" type="text" placeholder="请输入手机号" value="{{userInfo.phoneNumber}}" data-field="phoneNumber" bindinput="onInputValueChange" />
      </view>
    </view> -->

    <!-- 分割线 -->
    <view class="divider"></view>

    <!-- 用户状态 -->
    <view class="form-item readonly-item">
      <text class="item-label">状态</text>
      <view class="item-content">
        <text class="item-value">{{userInfo.status || '未知'}}</text>
      </view>
    </view>

    <!-- 创建时间 -->
    <view class="form-item readonly-item">
      <text class="item-label">加入时间</text>
      <view class="item-content">
        <text class="item-value">{{userInfo.createTimeFormatted || '未知'}}</text>
      </view>
    </view>

  </view>

  <view class="save-button-container">
    <button class="save-button" type="primary" bindtap="saveUserInfo">保存信息</button>
  </view>
</view>