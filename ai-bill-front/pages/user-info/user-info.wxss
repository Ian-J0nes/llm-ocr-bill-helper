/* pages/user-info/user-info.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.user-info-form {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  width: 180rpx;
  color: #333;
}

.item-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.item-input {
  width: 100%;
  text-align: left;
  font-size: 30rpx;
  color: #555;
}

.item-value {
  color: #888;
  font-size: 30rpx;
}

/* 头像特殊样式 */
.avatar-item .item-content {
  justify-content: flex-start;
}

.avatar-content {
  display: flex;
  align-items: center;
  cursor: pointer; /* For web, not directly applicable in mini-program but good practice */
}

.avatar-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee; /* Placeholder bg */
}

.avatar-change-tip {
  color: #888;
  font-size: 26rpx;
}

/* 只读项样式 */
.readonly-item .item-value {
  color: #555;
}

.divider {
  height: 20rpx;
  background-color: #f7f7f7;
  margin: 0 -30rpx; /* Extend to full width of the form padding */
}

.save-button-container {
  width: 100%;
  padding: 0 30rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.save-button {
  width: 100%;
  background-color: #07c160; /* WeChat Green */
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.save-button[type="primary"][disabled] {
  background-color: #a0e7c8; /* Lighter green for disabled state */
}

/* Placeholder style */
input::placeholder {
  color: #bbb;
  font-size: 30rpx;
}