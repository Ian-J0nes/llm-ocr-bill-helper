.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 80rpx;
    height: 100vh;
    padding-left: 50rpx;
    padding-right: 50rpx;
    box-sizing: border-box;
    background-color: #f7f7f7;
  }
  
  .login-prompt {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 60rpx;
  }
  
  .avatar-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 0;
  }
  
  .avatar-wrapper {
    width: 160rpx !important;
    height: 160rpx !important;
    min-width: 160rpx;
    min-height: 160rpx;
    border-radius: 50% !important;
    overflow: hidden !important;
    margin-bottom: 30rpx;
    background-color: #fff;
    padding: 0 !important;
    border: 1px solid #eee !important;
    box-sizing: border-box !important;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }
  
  .avatar-wrapper::after {
    display: none !important;
  }
  
  .avatar {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }
  
  .avatar-tip {
    font-size: 28rpx;
    color: #999;
  }
  
  .login-form {
    width: 100%;
  }
  
  .nickname-section {
    display: flex;
    align-items: center;
    background-color: transparent;
    padding: 25rpx 10rpx;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    border-left: none;
    border-right: none;
    border-radius: 0;
    margin-top: 0;
    margin-bottom: 60rpx;
    width: 100%;
    box-sizing: border-box;
  }
  
  .label {
    font-size: 32rpx;
    color: #333;
    margin-right: 30rpx;
    width: 120rpx;
  }
  
  .weui-input {
    flex: 1;
    font-size: 32rpx;
    color: #333;
    padding: 0;
    text-align: center;
  }
  
  .login-btn {
    width: 100%;
    margin-top: 40rpx;
    background-color: #07c160;
    color: white;
  }
  
  .login-btn[disabled] {
    background-color: #a0e0b8;
    color: #f7f7f7;
  }
  