.feedback-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 30rpx;
}

/* 页面头部 */
.page-header {
  padding: 60rpx 0 40rpx;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 表单容器 */
.feedback-form {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4757;
}

.optional {
  color: #999;
  font-weight: normal;
}

/* 类型选择器 */
.type-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 文本域 */
.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  box-sizing: border-box;
}

.feedback-textarea:focus {
  border-color: #007AFF;
  background-color: #fff;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 输入框 */
.feedback-input {
  width: 100%;
  padding: 24rpx 30rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.feedback-input:focus {
  border-color: #007AFF;
  background-color: #fff;
}

/* 占位符样式 */
.placeholder-style {
  color: #999;
}

/* 温馨提示 */
.tips {
  display: flex;
  align-items: flex-start;
  background-color: #f0f9ff;
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #007AFF;
  margin-top: 30rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  flex: 1;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  gap: 30rpx;
  padding: 0 0 60rpx;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.cancel-btn:active {
  background-color: #e9ecef;
}

.submit-btn {
  background-color: #007AFF;
  color: #fff;
}

.submit-btn:active {
  background-color: #0056b3;
}

.submit-btn::after,
.cancel-btn::after {
  border: none;
} 