<view class="page-container">
  <!-- 用户信息区域 -->
  <view class="user-info-section" bindtap="navigateToUserInfo">
    <view class="avatar-wrapper">
      <!-- <open-data type="userAvatarUrl"></open-data> -->
      <image class="avatar-img" src="{{userInfo.avatarUrl}}" wx:if="{{userInfo.avatarUrl}}"></image>
      <view class="avatar-placeholder" wx:else>未登录</view> <!-- 或者显示默认头像 -->
    </view>
    <!-- <open-data type="userNickName" class="nickname"></open-data> -->
    <text class="nickname">{{userInfo.nickName || '用户昵称'}}</text>
  </view>

  <!-- 菜单区域 -->
  <view class="menu-section">
     <!-- 添加AI模型选择菜单项 -->
    <view class="menu-item ai-model-item" bindtap="navigateToAiModelSelection">
      <view class="menu-item-main">
        <text class="menu-item-name">AI模型选择</text>
        <text class="menu-item-value" wx:if="{{currentAiModel}}">
          当前: {{currentAiModelDisplayName}}
        </text>
        <text class="menu-item-value" wx:else>未设置</text>
      </view>
      <text class="menu-item-arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateToAiPreview">AI智能洞察</view>
    <view class="menu-item" bindtap="navigateToExchangeRate">货币汇率</view>
    <view class="menu-item" bindtap="navigateToBillStatistics">账单统计</view>
    <!-- 添加预算设置菜单项 -->
    <view class="menu-item budget-item" bindtap="navigateToBudget">
      <view class="menu-item-main">
        <text class="menu-item-name">预算设置</text>
        <text class="menu-item-value" wx:if="{{hasBudget}}">已设置</text>
        <text class="menu-item-value warn-text" wx:else>未设置预算</text>
      </view>
      <text class="menu-item-arrow">></text>
    </view>
  </view>
  
  <!-- 底部选项 -->
  <view class="footer-section">
    <view class="footer-item" bindtap="navigateToHelp">帮助与反馈</view>
    <view class="divider"></view>
    <view class="footer-item" bindtap="shareToFriend">分享给朋友</view>
  </view>
</view>