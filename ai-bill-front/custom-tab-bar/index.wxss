.tab-bar-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff; 
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1); 
  padding-bottom: constant(safe-area-inset-bottom); 
  padding-bottom: env(safe-area-inset-bottom); 
  z-index: 999;
}

.tab-bar {
  display: flex;
  height: 40px; 
  align-items: center; 
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%; 
}

.tab-item-content {
  font-size: 12px;
  color: #000000; /* 未选中时黑色字体 */
  padding: 5px 10px; /* 内边距，可以调整 */
  border-radius: 15px; /* 轻微圆角 */
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-item-content {
  background-color: #000000; 
  color: #ffffff; 
  font-weight: bold;
}