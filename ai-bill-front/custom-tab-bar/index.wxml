<cover-view class="tab-bar-wrapper">
  <cover-view class="tab-bar">
    <block wx:for="{{list}}" wx:key="index">
      <cover-view
        class="tab-bar-item {{index === selected ? 'active' : ''}}"
        data-path="{{item.pagePath}}"
        data-index="{{index}}"
        bindtap="switchTab"
      >
        <cover-view class="tab-item-content">
          {{item.text}}
        </cover-view>
      </cover-view>
    </block>
  </cover-view>
</cover-view>